<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <script src="https://kit.fontawesome.com/289f8f794f.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Passero+One&display=swap" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles2.css">
    <title>Shows/Movies</title>
</head>

<body>
    <!-- Hamburger Navagation -->
    <div class="menu-wrap">
        <input type="checkbox" class="toggler">
        <div class="hamburger">
            <div></div>
        </div>
        <div class="menu">
            <div>
                <div>
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li><a href="/cosplay">Cosplay</a></li>
                        <li><a href="/comic">Comics</a></li>
                        <li><a href="/shows">Film</a></li>
                        <!-- <li><a href="/games">Game Characters</a></li> -->
                        <li><a href="/contact">Contact</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- JumboTron  -->
    <div class="jumbotron jumbotron-fluid film">
        <div class="overlay">
            <div class="container film-header">
                <h1 class="display-4">Black SuperHeroes in Film</h1>
                <p class="lead">Type in a Superhero Name from your favorite film below. If not shown please feel free
                    to submit a new character by clicking new character below.</p>
            </div>
        
        </div>
    </div>

    <div class="container">
       
        <!-- Submit new character-->
        <button type="button" class=" btn-outline-dark open-button ">New Character</button>
        <!-- form for creating a new character, will capture data and displayin character display-->
        <div class="form-popup" id="myform">
            <form action="/add" method="POST" class="form-container">
                <label for="charName">Name:</label>
                <input type="text" id="charName" name="charName">
                <label for="pic">Picture Url:</label>
                <input type="text" id="pic" name="pic">
                <label for="description">Enter Description</label>
                <textarea name="description" rows="10" cols="30" id="description"></textarea>
                <button type="submit" class="submit form-btn">Submit</button>
                <button type="button"   class="form-btn closebutton">Close</button>
            </form>
        </div>
        
        <!-- Display All Characters-->
       
        <div class="charDisplay " >
            <% superHeros.forEach(superHero=>{ %>
            <div class="displayAll card">
           <img src="<%= superHero.picture %>" class="card-img-top" alt="Superhero Picture"> 
           <h1 class="card-title"> <%= superHero.name %></h1>
           <p class="card-text"> <%= superHero.description %></p>
            </div>
           <% }) %>
        </div>
    </div>

    
    <script src="/js/script.js"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
        integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
        crossorigin="anonymous"></script>

</body>

</html>